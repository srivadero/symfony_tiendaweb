{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
<div class="ui two column stackable grid">
	<div class="column">
		<h1 class="ui header">
			<i class="barcode icon"></i>
			<div class="content">
				Productos
				<div class="sub header">Manage your products</div>
			</div>
		</h1>
	</div>
	<div class="column">
		<a class="ui right floated primary button" href="{{ path('producto_new') }}">Agregar</a>
	</div>
</div>

    <table class="ui table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.precio }}</td>
                <td>{{ producto.stock }}</td>
                <td>
                    <a href="{{ path('producto_show', {'id': producto.id}) }}">ver</a>
                    <a href="{{ path('producto_edit', {'id': producto.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no hay datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
