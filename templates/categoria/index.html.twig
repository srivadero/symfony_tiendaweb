{% extends 'base.html.twig' %}

{% block title %}Categorias
{% endblock %}

{% block body %}
<div class="ui two column stackable grid">
	<div class="column">
		<h1 class="ui header">
			<i class="home icon"></i>
			<div class="content">
				Categorias
				<div class="sub header">Manage your categories</div>
			</div>
		</h1>
	</div>
	<div class="column">
		<a class="ui right floated primary button" href="{{ path('categoria_new') }}">Agregar</a>
	</div>
</div>

    <table class="ui table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for categorium in categorias %}
                <tr>
                    <td>{{ categorium.id }}</td>
                    <td>{{ categorium.nombre }}</td>
                    <td>
                        <a href="{{ path('categoria_show', {'id': categorium.id}) }}">ver</a>
                        <a href="{{ path('categoria_edit', {'id': categorium.id}) }}">editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no hay datos</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
